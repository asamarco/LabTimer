<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="timerViewModel"
            type="com.example.labtimer.TimerViewModel" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/timer_text"
            android:layout_width="378dp"
            android:layout_height="69dp"
            android:fontFamily="@font/orbitron_medium"
            android:text="@{timerViewModel.currentTimeString}"
            android:textAlignment="center"
            android:textSize="54sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.075"
            tools:text="12:34:56" />

        <Button
            android:id="@+id/minute_button"
            style="@style/buttons"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="8dp"
            android:longClickable="true"
            android:onClick="addMinute"
            android:text="M"
            android:textSize="24sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/second_button"
            app:layout_constraintEnd_toStartOf="@+id/second_button"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/second_button"
            style="@style/buttons"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:onClick="addSecond"
            android:text="S"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/start_button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/minute_button"
            app:layout_constraintTop_toBottomOf="@+id/timer_text"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/start_button"
            style="@style/buttons"
            android:layout_width="134dp"
            android:layout_height="68dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="32dp"
            android:onClick="startStop"
            android:text="START"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/second_button"
            app:layout_constraintTop_toTopOf="@+id/second_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
